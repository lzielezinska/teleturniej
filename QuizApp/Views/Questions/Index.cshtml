@model QuizApp.Models.QuestionAnswersViewModel

@{ 
    var nextQuestionID = Model.Question.Id + 1;
}

<div class="card">
    <div class="card-title">
        @Model.Question.Content
    </div>
    <div class="d-flex flex-wrap">
        @foreach (var answer in Model.Answers)
        {
            <div class="p-2 col-md-6 col-12">
                <div class="card answer-card" value="@Html.Raw(answer.IsCorrect)">
                    @answer.Content
                </div>
            </div>
        }
    </div>
    <div class="ml-auto p-2">
        <a class="btn btn-success" asp-action="Index" asp-route-id="@nextQuestionID">Następne</a>
    </div>
</div>