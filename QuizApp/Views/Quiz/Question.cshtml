@model QuizApp.Models.QuestionAnswersViewModel

@{
    var linkToNextQuestion = Url.RouteUrl("quiz-question", new { controller = "Quiz", Action = "Question", quizId = Model.Question.QuizID, numberOfQuestion = ViewBag.ID + 1 });
}

<div class="card p-3">
    <div class="card-title mb-3 text-center">
        @Model.Question.Content
    </div>
    <div class="d-flex flex-wrap">
        @{
            int i = 0;
        }
        @foreach (var answer in Model.Answers)
        {
            <div class="col-sm-6 col-12">
                @if (i % 2 == 0)
                {
                    <div class="m-2 card answer-card mx-auto ml-sm-auto mr-sm-0" value="@Html.Raw(answer.IsCorrect)">
                        <div class="row h-100 w-100 m-0">
                            <div class="col-12 my-auto text-center">
                                @answer.Content
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="m-2 card answer-card mx-auto mr-sm-auto ml-sm-0" value="@Html.Raw(answer.IsCorrect)">
                        <div class="row h-100 w-100 m-0">
                            <div class="col-12 my-auto text-center">
                                @answer.Content
                            </div>
                        </div>
                    </div>
                }

            </div>
            { i = i + 1; }
        }
    </div>
    <div class="ml-auto p-2">
        @if (Model.IsAnswerFinal)
        {
            <a class="btn btn-green" asp-controller="Home" asp-action="Index">Zapisz odpowiedzi</a>
        }
        else
        {
            <a class="btn btn-green" href="@linkToNextQuestion">Następne</a>
        }
    </div>
</div>